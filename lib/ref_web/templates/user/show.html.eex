<h1> hello </h1>
<img src="<%= Ref.Avatar.url({@user.avatar, @user}, :thumb) %>" style="width:80px; height:80px; border-radius: 50%;"/>

<%= @user.email %>

<%= for service <- @services do %>
    <p> <%= service.name %></p>
    <p><%= link "Request", to: Routes.request_path(@conn, :new, @user.username, service.id) %></p>
<%end%>
<hr>

<%= for post <- @posts do %>
    <p> <%= post.body %></p>
<%end%>